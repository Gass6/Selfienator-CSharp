<Window x:Class="Arduino.Selfienator.Views.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Core="clr-namespace:Arduino.Selfienator.Core"
        Title="LoadWindow" Width="250" Height="150">
    <Window.Resources>
        <Core:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>
    <StackPanel VerticalAlignment="Center">
        <ComboBox Margin="5" ItemsSource="{Binding listOfPorts}" SelectedItem="{Binding selectedPort}" IsEnabled="{Binding isEditAllowed}" />
        <Button Margin="5" Content="Pripojiť" Command="{Binding connectComm}" CommandParameter="{Binding selectedPort}" />
        <Button Margin="5" Content="Obnoviť" Command="{Binding refreshComm}"/>
    </StackPanel>
</Window>
